<h2>Internship</h2>
<div class="row">
    <div class="col-sm-12 col-md-12">
        <div class="thumbnail">
            <div class="caption">
                <h3 class="company text-danger">{{ internship.company }}</h3>
                <h5 class="company text-danger">{{ internship.designation }}</h5>
                <p class="description">{{ internship.description }}</p>
                <p class="salary">{{ internship.salary }} PKR</p>
                <small class="location">{{ internship.location }}</small>
                <div class="clearfix">
                    <div class="type pull-left">{{ internship.type }}</div>
                </div>
            </div>
        </div>
    </div>
</div>

<form action='/comment/{{internship.id}}' method='post' id="comment-form">
    <div class="form-group">
        <label for="commenttype">Request/Feeback:</label>
        <select name="commenttype" id="commenttype" class="form-control" form="comment-form">
            <option class="options" value="Request">Request</option>
            <option class="options" value="Feedback">Feedback</option>
        </select>
    </div>
    
    <div class="form-group">
        <label for="comment">Comment: </label>
        <textarea class="form-control" id="comment" name="comment" placeholder='Do you any Question or Care to Give your Feedback?' required> </textarea>
    </div>              
    <button class="btn btn-danger btn-md pull-right" type="submit">Post <i class="fa fa-commenting-o" aria-hidden="true"></i></button> 
</form>